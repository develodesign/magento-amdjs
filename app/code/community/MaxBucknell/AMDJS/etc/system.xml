<config>
    <default>
        <MaxBucknell_AMDJS>
            <settings>
                <sourceBaseDir>js/maxbucknell/amdjs/modules</sourceBaseDir>
                <cache>false</cache>
                <minify>false</minify>
                <devMode>true</devMode>
            </settings>
        </MaxBucknell_AMDJS>
    </default>
    <sections>
        <dev>
            <groups>
                <js translate="label">
                    <fields>
                        <minify translate="label">
                            <label>Enable minification</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </minify>
                        <cache translate="label">
                            <label>Enable caching</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cache>
                        <devMode translate="label">
                            <label>Disable minification and caching when in developer mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </devMode>
                    </fields>
                </js>
            </groups>
        </dev>
    </sections>
</config>
