<config>
    <sections>
        <dev>
            <groups>
                <amdjs translate="label">
                    <label>AMDJS Optimization Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>101</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <sources>
                            <label>Module source files location</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                <p>Relative to the web root.
                            ]]></comment>
                        </sources>
                        <paths translate="label">
                            <label>Module Path Aliases</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                <p>Place a JSON object here detailing path mappings. See require.js docs for more details.</p>
                            ]]></comment>
                        </paths>
                        <shims>
                            <label>Script AMD Shims</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                <p>Place a JSON object here detailing modules to be shimmed. See require.js docs for more details.</p>
                            ]]></comment>
                        </shims>
                        <minify translate="label">
                            <label>Enable minification</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </minify>
                        <minifier>
                            <label>Custom minifier</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                <p>If you want to use a custom minifier, give the name of the command here. Use {{file}} as a placeholder for the input. The command should send its output to stdout.</p>

                                <p>For example, to use the excellent uglify-js2 minifier, one could enter "uglifyjs2 {{file}} -mc"</p>
                            ]]></comment>
                        </minifier>
                        <cache translate="label">
                            <label>Enable caching</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cache>
                        <devMode translate="label">
                            <label>Disable minification and caching when in developer mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </devMode>
                    </fields>
                </amdjs>
            </groups>
        </dev>
    </sections>
</config>
